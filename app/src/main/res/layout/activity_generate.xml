                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lotto_1" />

            <ImageView
                android:id="@+id/list1ball2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lotto_1" />

            <ImageView
                android:id="@+id/list1ball3"

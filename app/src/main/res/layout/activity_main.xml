<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/round"
        android:gravity="center"
        android:text="1002회"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lotto_1" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lotto_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lotto_1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lotto_1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lotto_1" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lotto_1" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_add_24" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lotto_1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/balls"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="2022.03.04 추첨"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:gravity="center"
        android:text="1등 당첨 금액 : ?"
        android:textSize="16dp" />

    <Button
        android:id="@+id/generate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/save"
        android:backgroundTint="#74CEFF"
        android:drawableLeft="@drawable/lotto_drawable"
        android:gravity="left|center"
        android:text="당첨번호 생성"
        android:textSize="19dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/winlist"
        android:backgroundTint="#FFB491"
        android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
        android:gravity="left|center"
        android:text="저장번호 목록"
        android:textSize="19dp" />

    <Button
        android:id="@+id/winlist"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/qrcode"
        android:backgroundTint="#AADA72"
        android:drawableLeft="@drawable/rank_drawable"
        android:gravity="left|center"
        android:text="회차별 당첨번호"
        android:textSize="19dp" />

    <Button
        android:id="@+id/qrcode"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/review"
        android:backgroundTint="#FFC107"
        android:drawableLeft="@drawable/ic_baseline_qr_code_24"
        android:gravity="left|center"
        android:text="QR코드 당첨확인"
        android:textSize="19dp" />

    <Button
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#ACACAC"
        android:drawableLeft="@drawable/board_drawable"
        android:gravity="left|center"
        android:text="개발자 후기게시판"
        android:textSize="19dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
